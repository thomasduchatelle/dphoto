# Use the official Playwright image which includes all browsers and dependencies
FROM mcr.microsoft.com/playwright:v1.55.1-jammy

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Expose Ladle port
EXPOSE 61000

# Default command to run tests
CMD ["npm", "test"]
